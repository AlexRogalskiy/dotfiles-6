[user]
  email = robertcboll@gmail.com
  name = rob boll

[github]
  user = roboll

[url "git@github.com:roboll"]
  insteadOf = https://github.com/roboll/

[credential]
  helper = osxkeychain

[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
  editor = vim

[rerere]
  enabled = true

[branch]
  autosetupmerge = always
  autosetuprebase = always

[push]
  # push only current branch to its tracking branch
  default = tracking

[diff]
  tool = vimdiff
  renames = copy
  renamelimit = 0
  prompt = false

[difftool]
  prompt = false

[merge]
  tool = vimdiff

[color]
  ui = auto
  branch = auto
  status = auto
  diff = false
  interactive = auto

[alias]
  a = add
  aa = add .
  b = branch
  c = commit
  cm = commit -m
  co = checkout
  d = diff -w
  dt = difftool
  lo = log --oneline
  mm = merge
  mf = merge --ff-only
  rbi = rebase -i
  rbc = rebase --continue
  rba = rebase --abort
  rp = remote prune
  rpo = remote prune origin
  s = status .
  sg = status
  tree =  log --graph --abbrev-commit --decorate --format=format:'%h - %aD (%ar)%d%n''          %s - %an' --all
  treed =  log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --date-order
