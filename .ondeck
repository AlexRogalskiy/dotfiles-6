alias vpn="sudo openconnect -b --pid-file=$HOME/.vpnpid https://vpn.ondeck.com \
  --user=rboll"

function vpnoff() {
  sudo -v
  local pid=`sudo cat $HOME/.vpnpid`
  if [  ! -z $pid ]; then
    sudo kill -9 $pid
    > $HOME/.vpnpid
    echo "killed"
  else
    echo "not running"
  fi
}

function vpns() {
  sudo -v
  local pid=`sudo cat $HOME/.vpnpid`
  if [  ! -z $pid ]; then
    echo "true"
  else
    echo "false"
  fi
}